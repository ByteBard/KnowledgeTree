<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/overall_home_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/colorPrimary"
        app:itemIconTint="@drawable/selector"
        app:itemTextColor="@drawable/selector"
        app:menu="@menu/menu_navigation" />

    <TextView
        android:id="@+id/overall_home_issue_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="@string/overall_home_issue_title"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/overall_home_issue_total_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/overall_home_issue_title"
        android:layout_alignParentStart="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="30dp"
        android:text="@string/overall_home_issue_label_total"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/overall_home_issue_resolved_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/overall_home_issue_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="@string/overall_home_issue_label_resolved"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/overall_home_issue_unresolved_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/overall_home_issue_title"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="21dp"
        android:text="@string/overall_home_issue_label_unresolved"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/overall_home_issue_total_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/overall_home_issue_total_label"
        android:layout_alignParentStart="true"
        android:layout_marginStart="45dp"
        android:layout_marginTop="10dp"
        android:text="@string/overall_home_issue_label_total_number"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/overall_home_issue_resolved_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/overall_home_issue_resolved_label"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="@string/overall_home_issue_label_resolved_number"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/overall_home_issue_unresolved_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/overall_home_issue_unresolved_label"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="60dp"
        android:text="@string/overall_home_issue_label_unresolved_number"
        android:textSize="24sp" />

    <ProgressBar
        android:id="@+id/overall_home_issue_progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/overall_home_issue_resolved_number"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:max="100"
        android:progress="50"
        android:scaleX="6"
        android:scaleY="8"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/overall_home_task_label_progress_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/overall_home_issue_progressBar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/overall_home_issue_label_progress"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/overall_home_task_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/overall_home_task_label_progress_value"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="@string/overall_home_task_title"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/overall_home_task_label_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/overall_home_task_title"
        android:layout_alignParentStart="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="30dp"
        android:text="@string/overall_home_task_label_total"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/overall_home_task_label_total_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/overall_home_task_label_total"
        android:layout_alignParentStart="true"
        android:layout_marginStart="45dp"
        android:layout_marginTop="10dp"
        android:text="@string/overall_home_task_label_total_number"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/overall_home_task_label_complete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/overall_home_task_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="@string/overall_home_task_label_complete"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/overall_home_task_label_complete_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/overall_home_task_label_complete"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="@string/overall_home_task_label_complete_number"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/overall_home_task_label_incomplete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/overall_home_task_title"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="21dp"
        android:text="@string/overall_home_task_label_incomplete"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/overall_home_task_label_incomplete_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/overall_home_task_label_incomplete"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="40dp"
        android:text="@string/overall_home_task_label_incomplete_number"
        android:textSize="24sp" />


    <ProgressBar
        android:id="@+id/overall_home_task_progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/overall_home_task_label_complete_number"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:max="100"
        android:progress="50"
        android:scaleX="6"
        android:scaleY="8"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/overall_home_task_label_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/overall_home_task_progressBar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/overall_home_task_label_progress"
        android:textSize="30sp" />


</RelativeLayout>